<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.hoangduy.calculator.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorBar"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvback"
            style="@style/icon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/clear1char"
            tools:ignore="NestedWeights" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/title"
            android:textColor="@android:color/white"
            android:textSize="@dimen/calculator_tv_title_fontsize" />

        <TextView
            android:id="@+id/tvsqr"
            style="@style/icon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="end"
            android:text="@string/sqrt" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvinput"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorInput"
        android:ellipsize="end"
        android:gravity="center_vertical|end"
        android:scrollHorizontally="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/calculator_tv_displayInput_font_size" />

    <TextView
        android:id="@+id/tvresult"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorResult"
        android:ellipsize="end"
        android:gravity="end"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:scrollbars="horizontal"
        android:textColor="@android:color/white"
        android:textSize="@dimen/calculator_tv_displayResult_font_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorKeyboard"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvclearall"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/clear"
            android:textColor="@color/colorClear"
            android:textSize="@dimen/calculator_tv_clear_fontsize"
            tools:ignore="NestedWeights" />

        <TextView
            android:id="@+id/tvclear"
            style="@style/NumberCalculator"
            android:layout_height="match_parent"
            android:text="@string/clearall" />

        <TextView
            android:id="@+id/tvdiv"
            style="@style/NumberCalculator"
            android:layout_height="match_parent"
            android:text="@string/div" />

        <TextView
            android:id="@+id/tvmul"
            style="@style/NumberCalculator"
            android:layout_height="match_parent"
            android:text="@string/mul" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorKeyboard"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvn1"
            style="@style/NumberCalculator"
            android:layout_height="match_parent"
            android:text="@string/n1" />

        <TextView
            android:id="@+id/tvn2"
            style="@style/NumberCalculator"
            android:layout_height="match_parent"
            android:text="@string/n2" />

        <TextView
            android:id="@+id/tvn3"
            style="@style/NumberCalculator"
            android:layout_height="match_parent"
            android:text="@string/n3" />

        <TextView
            android:id="@+id/tvminus"
            style="@style/NumberCalculator"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/minus"
            android:textColor="@android:color/white"
            android:textSize="@dimen/calculator_tv_minus_fontsize" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorKeyboard"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvn4"
            style="@style/NumberCalculator"
            android:layout_height="match_parent"
            android:text="@string/n4" />

        <TextView
            android:id="@+id/tvn5"
            style="@style/NumberCalculator"
            android:layout_height="match_parent"
            android:text="@string/n5" />

        <TextView
            android:id="@+id/tvn6"
            style="@style/NumberCalculator"
            android:layout_height="match_parent"
            android:text="@string/n6" />

        <TextView
            android:id="@+id/tvplus"
            style="@style/NumberCalculator"
            android:layout_height="match_parent"
            android:text="@string/plus" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/colorKeyboard"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:ignore="NestedWeights">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvn7"
                    style="@style/NumberCalculator"
                    android:layout_height="match_parent"
                    android:text="@string/n7" />

                <TextView
                    android:id="@+id/tvn8"
                    style="@style/NumberCalculator"
                    android:layout_height="match_parent"
                    android:text="@string/n8" />

                <TextView
                    android:id="@+id/tvn9"
                    style="@style/NumberCalculator"
                    android:layout_height="match_parent"
                    android:text="@string/n9" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvn0"
                    style="@style/NumberCalculator"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/n0" />

                <TextView
                    android:id="@+id/tvdot"
                    style="@style/NumberCalculator"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/dot" />

                <TextView
                    android:id="@+id/tvpercent"
                    style="@style/NumberCalculator"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/per" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tvequal"
            style="@style/NumberCalculator"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:background="@color/colorlEqual"
            android:text="@string/equal" />
    </LinearLayout>

</LinearLayout>

